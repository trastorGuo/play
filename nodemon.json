{
    "restartable": "rs",
    "ignore": [
        "src",
        "node_modules",
        "mockData",
        "build/*",
        "log/*"
    ],
    "watch": ["server/**/*"],
    "verbose": true,
    "exec": "ts-node --project server/tsconfig.json --files server/main.ts",
    "env": {
        "PORT": "6015",
        "NODE_ENV": "development"
    },
    "ext": "ts,js"
}
